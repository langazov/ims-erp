# ERP System Configuration
# Copy this to config.yaml and update values

app:
  name: "client-command-service"
  host: "0.0.0.0"
  port: 8080
  environment: "development"
  version: "1.0.0"
  shutdown_timeout: 30s
  read_timeout: 30s
  write_timeout: 30s

mongodb:
  uri: "mongodb://localhost:27017"
  database: "erp_system"
  username: ""
  password: ""
  auth_database: "admin"
  max_pool_size: 100
  min_pool_size: 10
  max_conn_idle_time: 5m
  connect_timeout: 10s
  server_selection_timeout: 5s

redis:
  mode: "standalone"
  addresses:
    - "localhost:6379"
  username: ""
  password: ""
  database: 0
  pool_size: 100
  min_idle_conns: 10
  max_retries: 3
  dial_timeout: 5s
  read_timeout: 3s
  write_timeout: 3s

nats:
  urls:
    - "nats://localhost:4222"
  username: ""
  password: ""
  token: ""
  max_reconnect: 60
  reconnect_wait: 2s
  connect_timeout: 10s
  jetstream:
    enabled: false
    domain: ""
    stream_prefix: ""

minio:
  endpoint: "localhost:9000"
  access_key: ""
  secret_key: ""
  use_ssl: false
  secure: false
  region: "us-east-1"
  bucket_prefix: "erp"

elasticsearch:
  addresses:
    - "http://localhost:9200"
  username: ""
  password: ""
  cloud_id: ""
  api_key: ""
  max_retries: 3
  index_prefix: "erp"

auth:
  jwt_secret: "your-secret-key-change-in-production"
  jwt_issuer: "erp-system"
  access_token_expiry: 15m
  refresh_token_expiry: 168h
  password_min_length: 8
  password_require_upper: true
  password_require_lower: true
  password_require_number: true
  password_require_special: false
  max_login_attempts: 5
  lockout_duration: 15m
  session_ttl: 24h
  mfa_enabled: false
  mfa_type: "totp"

security:
  encryption_key: "your-encryption-key"
  encryption_algorithm: "aes256"
  rate_limit_requests: 1000
  rate_limit_window: 1m
  cors_domain:
    - "http://localhost:3000"
  allowed_headers:
    - "Content-Type"
    - "Authorization"
  allowed_methods:
    - "GET"
    - "POST"
    - "PUT"
    - "PATCH"
    - "DELETE"
  max_request_body_size: 10485760

tracing:
  enabled: true
  service_name: "client-command-service"
  exporter_type: "stdout"
  endpoint: ""
  sampler_type: "always"
  sampler_ratio: 1.0

logging:
  level: "info"
  format: "json"
  output_path: ""
  error_path: ""
  add_source: true
  caller: true
